{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2023"],
    "strict": true, // Adjust strictness as needed
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "node",
      "drizzle-orm",
      "zod",
      "dayjs",
      "fastify",
      "fastify-type-provider-zod",
      "http-status-codes",
      "postgres"
    ],

    "sourceMap": true // Optional for debugging
  }
}
